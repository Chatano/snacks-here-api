{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",                                  
    "paths": {
      "@contig/*": ["src/contig/*"],
      "@controllers/*": ["src/controllers/*"],
      "@dtos/*": ["src/dtos/*"],
      "@entities/*": ["src/entities/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@repositories/*": ["src/repositories/*"]
    },
    "outDir": "./dist"
  }
}
